{
  "name": "IndieWeb-components",
  "version": "2017.0.0",
  "description": "IndieWeb components, a front-end component library and styleguide including common Microformat data formats",
  "keywords": [
    "styleguide",
    "patterns",
    "library"
  ],
  "homepage": "",
  "bugs": "https://github.com/calumryan/indieweb-components/issues",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Calum Ryan",
  "repository": {
    "type": "git",
    "url": "https://github.com/calumryan/indieweb-components.git"
  },
  "main": "fractal.js",
  "scripts": {
    "prestart": "npm install",
    "start": "node_modules/.bin/gulp start",
    "build": "node_modules/.bin/gulp build",
    "dev": "node_modules/.bin/gulp dev",
    "publish": "node_modules/.bin/gulp publish",
    "test": "xo || stylelint src/**/*.css"
  },
  "browserslist": [
    ">2%"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "font-range"
          ]
        }
      ]
    }
  },
  "xo": {
    "space": true,
    "envs": "browser"
  },
  "dependencies": {
    "@frctl/fractal": "^1.1.7",
    "@frctl/mandelbrot": "^1.2.0",
    "@frctl/nunjucks": "^1.0.0",
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.0",
    "cssnano": "^4.0.0-rc.2",
    "del": "^3.0.0",
    "fontfaceobserver": "^2.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-gh-pages": "^0.5.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-postcss": "^7.0.1",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-util": "^3.0.0",
    "markdown-it": "^8.0.0",
    "markdown-it-abbr": "^1.0.0",
    "markdown-it-footnote": "^3.0.0",
    "nunjucks-date": "^1.2.0",
    "postcss-apply": "^0.8.0",
    "postcss-assets": "^5.0.0",
    "postcss-calc": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.2.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-map": "^0.9.0",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^2.1.0",
    "postcss-responsive-type": "^1.0.0",
    "postcss-simple-vars": "^4.1.0",
    "prismjs": "^1.9.0",
    "rollup": "^0.51.8",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-closure-compiler-js": "^1.0.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.1"
  },
  "devDependencies": {
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "xo": "^0.18.0"
  }
}
